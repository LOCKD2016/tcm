.check_list

    .checkbox
        border 1px solid rgba(0,0,0,.2)
        width 15px
        height 15px
        display inline-block
        margin 0
    tr.active
        background #f5f5f5
        .checkbox
            background #58c
            position relative
            &:after
                width 6px
                trans(rotate(45deg))
                left 1px
                bottom 5px

            &:before
                width 10px
                trans(rotate(-45deg))
                left 4px
                bottom 6px
            &:after
            &:before
                content ''
                position absolute
                background #fff
                height 2px

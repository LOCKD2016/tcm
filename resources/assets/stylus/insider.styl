@charset "utf-8";
.item_list
    background #fff
    .list
        padding 20px 20px
        position relative
        &:not(:last-child)
            border-bottom 1px dashed #eee
        h2
            margin-bottom 10px
            position relative
            a
                font-size 20px
                font-weight bold
                color #539
                &:before
                    content ''
                    position absolute
                    background #f7f9f0
                    width 10px
                    height 24px
                    border-radius 0 50% 50% 0
                    left -20px
                    top 8px
                &:hover
                    text-decoration none
                    cursor pointer
            span
                position absolute
                bottom 0
                left 360px
                right 420px
                font-size 12px
                color #999
                vertical-align middle
            .sel_box
                b
                    font-weight normal
                    font-size 12px
                    width 100px
                    height 30px
                    display inline-block
                    border 1px solid #ccc
                    text-align center
                    line-height 30px
                    border-radius 3px
                    cursor pointer
                ul
                    list-style none
                    position absolute
                    top 40px
                    left 0
                    padding-left 0
                    border 1px solid #ccc
                    width 100%
                    background #fff
                    z-index 3
                    li
                        text-align center
                        padding 0px 10px
                        line-height 30px
                        cursor pointer
                        i
                            font-style normal
                            margin-left 5px
                            font-size 14px
                            vertical-align middle
                .sanjiao
                    top 20px
            .no
                 left 520px

        dl
            overflow hidden
            white-space nowrap
            font-size 14px
            margin-bottom 5px
            dt,dd
                display inline-block
                overflow hidden
                text-overflow ellipsis
            dd
                max-width 1000px
        .fl_r
        .fl_c
            position absolute
            top 20px
            right 300px
        .fl_c
            top 25px
        .fl_r
            left auto
            right 20px
            select
                width 100px
                height 30px
                display inline-block
                vertical-align middle

        .label
        .t_cover
            display none
        &.s_tag_discuss .label-primary
        &.s_tag_follow .label-warning
        &.s_tag_talk .label-success
        &.s_cover .t_cover
        &.s_tag_finance .label-success
            display inline-block


        .t_cover span:not(:empty)
            margin-left 4px
            background #eee
            padding 0 5px
            color #666
            font-size 12px

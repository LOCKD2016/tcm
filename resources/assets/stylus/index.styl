            margin-left 20px



.main_warp
    padding-bottom 50px

.sub_tabs
    border 1px solid #eee
    line-height 50px
    height 52px
    background #fff
    position relative
    > ul
        display inline-block
        margin 0 20px 0 0
        height 50px
        li
            padding 0 20px
            border-right 1px solid #eee
            cursor pointer
            float left

    .pull-right
        position absolute
        right 20px
        top 0

    ul
    label
        vertical-align top
    label
        font-weight normal
        input
            margin 0
            vertical-align middle
        span
            margin-left 5px
            vertical-align middle
.btn-lg
    min-width 180px
.btn i
    margin-right 5px
.dropdown-menu
    min-width 100px
    a
        cursor pointer
.pagination li

    a
        color #999

    i
        font-style normal


table
    background #fff

.label
    display inline-block
    cursor pointer
    border-radius 15px
    font-weight 100
    line-height 24px
    padding 0 15px
    position relative
    font-size 12px
    &:hover
        opacity .8
.lab
    display inline-block
    cursor pointer
    border-radius 15px
    font-weight 100
    line-height 24px
    padding 0 25px 0 15px
    position relative
    font-size 12px
    background #f5f5f5
    color #444
    &:hover
        opacity .8
    &:after
    &:before
        content ''
        width 8px
        height 2px
        background #999
        position absolute
        top 11px
        right 9px
    &:before
        trans(rotate(90deg))
    &.active
        background #58c
        color #fff
        &:after
        &:before
            background #fff
            width 10px
            height 1px
        &:after
            trans(rotate(45deg))
        &:before
            trans(rotate(-45deg))

for $i in 1 ... 4
    .sub_tabs ul[show=\" {$i}\"]
        li:nth-child( {$i})
            background #f7f7f7

clearfix()
    &:after
        content ''
        display table
        clear both
        visibility hidden
        line-height 0
        height 0

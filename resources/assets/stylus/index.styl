bgs($s,$v,$d)
    background: -moz-linear-gradient($s,$v,$d)
    background: -webkit-linear-gradient($s,$v,$d)

trans($s)
    transform $s
    -o-transform $s
    -ms-transform $s
    -moz-transform $s
    -wbekit-transform $s


.btn-primary
    background #6b739f
    border-color #6b739f

.header
    position fixed
    height 70px
    top 0
    left 0
    right 0
    z-index 5
    background #402d65
    color #fff
    a
        color #fff
    .logo
        display inline-block
        //width 140px
        width 100px
        float left
        height 60px
        background url("/img/logo.png") no-repeat center left
        //background-size auto 53px
        background-size contain
        margin 0 -10px
        position absolute
        top 5px
        left 0
        border-radius 4px
    .text-right
        //padding-top 25px
        i
            margin 0 2px 0 20px
            font-size 18px
        .icon-bell
            margin 0 2px 0 20px
            font-size 18px
            position relative
            cursor pointer
            b
                font-size 10px
                position absolute
                padding 2px
                background red
                border-radius 50%
                top -8px
                right -8px
    .input-group
        padding-top 18px
        .form-control
            background rgba(140,160,200,.3)
            border 0
            box-shadow none
            color #fff
    .navbar-nav
        position absolute
        left 190px
        white-space nowrap
        > li
            display inline-block
        li
            height 70px
            float none
            &:hover
                background rgba(140,160,200,.1)
            &.active
            .v-link-active
                background #1688af
            &:hover ul
                top 70px
                opacity 1
            ul
                position absolute
                transition top .3s .1s, opacity .3s .3s
                left 0
                top -400px
                opacity 0
                width 100%
                background #343b66
                margin 0
                padding 0
                list-style none
                li
                    text-align center
                    height 40px
                    border-top 1px solid rgba(140,160,200,.1)
                    &:hover
                    &.active
                    .v-link-active
                        background #1688af
                a
                    line-height 20px
                    padding 10px 0
            a
                display block
                padding 0 25px
                line-height 70px
                background none

.tit_nav
    position fixed
    z-index 4
    top 70px
    left 0
    width 100%
    background #fff
    line-height 50px
    box-shadow 0 2px 4px rgba(0,0,0,.1)
    border-bottom 1px solid #aeabc9
    .pull-left

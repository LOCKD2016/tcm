bgs()
    background: -linear-gradient(45deg,$jba,$jbb)
    background: -webkit-linear-gradient(45deg,$jba,$jbb)
bgt()
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;

trans($x,$y)
    -webkit-transform translate($x,$y)
    transform translate($x,$y)

tr_ro($x)
    -webkit-transform rotate($x)
    transform rotate($x)

clear()
    &:after
        content ''
        display table
        clear both
        visibility hidden
        line-height 0
        height 0


.clearfix
    clear()
    .pull-left
    .left
        float left
    .pull-right
    .right
        float right
.none
    display none

//极细线
.android
    .bor
        border-width 1px !important
    footer:before
        top 1px !important
        z-index 3
        -webkit-transform: scaleY(0.5)
        transform: scaleY(0.5)



bor($pos,$top,$bot,$cor)
    position $pos
    if $top == auto
        &:after
            content: '';
            position: absolute;
            left: 0;
            background: $cor
            bottom -1px
            width: 100%
            height: 1px
            -webkit-transform: scaleY(-0.5)
            transform: scaleY(-0.5)
            -webkit-transform-origin: 0 0
            transform-origin: 0 0
    else
        &:before
            content: '';
            position: absolute;
            left: 0;
            background: $cor
            top $top
            width: 100%
            height: 1px
            -webkit-transform: scaleY(-0.5)
            transform: scaleY(-0.5)
            -webkit-transform-origin: 0 0
            transform-origin: 0 0


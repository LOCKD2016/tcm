.p_my
    #wrap
        padding-top 0
        padding-bottom $foot_h
    .banner
        color #fff
        height 3rem
        img()
        background-image url('../img/banner_u.jpg')
        position relative
        > div
            position absolute
            top 50%
            trans(0,-50%)


    .avatar
        width 1.2rem
        height 1.2rem
        left .3rem
        border 1px solid #fff
    .nickname
        left 1.6rem
        ft()
        font-size .36rem
    .vip
        right 0
        background $jv
        padding .05rem 0 .05rem .2rem
        border-radius .5rem 0 0 .5rem
        span
            margin 0 .1rem

    .nav-tabs
        padding .2rem 0
        h4
            font-size .3rem
            color $he
.p_myfmld
    ul
        &:nth-child(2)
            margin-bottom 0
        &:first-child
            margin-top 0
            li:first-child
                height 1.2rem
                line-height 1.2rem

.address_list
    margin-bottom .2rem
    background #fff
    bor(relative,0,auto,$bor)
    bor(relative,auto,0.01rem,$bor)
    padding .25rem .3rem
    .phone
        position absolute
        right .3rem
    .phone
    .name
        font-size .28rem
    &[type="1"] .left
        color $jv
    .left
        padding-top .08rem
        color #999
    i
        font-size .3rem
        margin-right .1rem
    .addr
        padding .2rem 0
        margin-bottom .2rem
        bor(relative,auto,0.01rem,$bor)

.panel
    margin .2rem 0
    background #fff
    bor(relative,0.01rem,auto,$bor)
    bor(relative,auto,0.01rem,$bor)
    overflow hidden
    min-height 1rem
.order_list
    margin .2rem 0
    background #fff
    bor(relative,0.01rem,auto,$bor)
    bor(relative,auto,0.01rem,$bor)
    overflow hidden
    min-height 2rem
    .head
        text-align right
        bor(relative,auto,0.01rem,$bor)
        height .6rem
        line-height .6rem
        padding 0 .3rem
        color #999
    .mark
        position absolute
        z-index 4
        font-size .16rem
        padding .35rem 0 0 0
        text-align center
        width 1.2rem
        height .6rem
        color #fff
        top -.2rem
        left -.5rem
        transform rotate(-45deg)
        -webkit-transform rotate(-45deg)
        background #af8d60
        &:after
            content '门诊'
        &[type="2"]
            background #e27b01
            &:after
                content '在线'
        &[type="3"]
            background #cf4900
            &:after
                content '药方'
        &[type="4"]
            background #fa3200
            &:after
                content '商品'
    .main
        padding .2rem
        .clearfix
            padding 0 .1rem
        .left
            color #999
        .doctors
            background #f2f2f1
            border-radius .1rem
            margin .05rem 0
            position relative
            height 1rem
            padding .2rem 1.1rem
            .avatar
                left .2rem
                top .15rem
                width .7rem
                height .7rem
            .avatar
            .price_a
            .price_b
                position absolute
            .price_a
                top .25rem
                right .2rem
            .price_b
                top .55rem
                right .2rem
        .commodity
            background #fff
            padding .3rem 0 0 1.2rem
            .price_b
                opacity .6
                text-decoration line-through
            .avatar
                top 0
                left .05rem
                border-radius 0
                width 1rem
                height 1rem
        .hospital
            padding .1rem 0 0 .4rem
            position relative
            i
                position absolute
                color $he
                left 0
                font-size .3rem
                top .2rem
            p
                color #999
    .foot
        padding .2rem
        height .9rem
        bor(relative,0,auto,$bor)
        text-align right
        .price
            position absolute
            b
                font-size .3rem
                color $he

.pop
    position fixed
    display none
    z-index 99
    top 0
    left 0
    width 100%
    height 100%
    background rgba(0,0,0,.5)
    .box
        position absolute
        width 4.6rem
        top 50%
        left 50%
        background #fff
        border-radius .1rem
        overflow hidden
        box-shadow 0 0 .2rem rgba(0,0,0,.3)
        trans(-50%,-50%)

    .head
        background #f1f4f8
        height .8rem
        line-height .8rem
        padding-left .2rem
        i
            color $jv
            font-size .3rem
            margin 0 .1rem
        .iocn-close
            position absolute
            top .2rem
            right .2rem
        .avatar
            margin-top .2rem
            width 1rem
            height 1rem


    .main
        padding .2rem .2rem
        max-height 3rem
        overflow-y auto
        p
            margin .05rem 0
        ul
            ul()
            li
                padding .05rem 0
    .foot
        padding .2rem 0
        text-align center
        bor(relative,0,auto,$bor)
        color $jv
#addressSet
    ul
        li
            bor(relative,auto,.01rem,$bor)
            padding .1rem .5rem .1rem 0
            p
                color #999
            h4
                font-size .24rem
            i
                position absolute
                right 0
                top .3rem
                color #fff
                font-size .3rem
            &.active
                i
                    color $jv
            &:last-child:after
                display none

        h3
            padding .5rem 0
            a
                color $jv

.p_my_order_det
    .user
        padding .2rem .2rem .2rem .6rem
        i
            color $he
            left .2rem
            top .3rem
            font-size .3rem
        i
        .phone
            position absolute
        .phone
            right .2rem
        p
            color $hui

    .order_sta
        padding 1.2rem .4rem
        dl
            width 100%
            display table
            margin .1rem 0
            dt,dd
                display table-cell
            dt
                color $hui
                width 1.2rem
    .fer
        padding .2rem
        .doctors
            background #f2f2f1
            border-radius .1rem
            margin .05rem 0
            position relative
            height 1rem
            padding .2rem 1.1rem
            .avatar
                left .2rem
                top .15rem
                width .7rem
                height .7rem
            .avatar
            .price_a
            .price_b
                position absolute
            .price_a
                top .25rem
                right .2rem
            .price_b
                top .55rem
                right .2rem
        .commodity
            .price_b
                opacity .6
                text-decoration line-through
            .avatar
                border-radius 0
        .yhm
            padding .2rem
        .foot
            margin 0 -.2rem 0 0
            padding .2rem .4rem 0 .2rem
            bor(relative,0,auto,$bor)
            line-height .4rem
            .right
                font-size .3rem
                color $he
.p_prescription
    #wrap
        padding-bottom 1rem
    .panel
        color #333
.prescription
    //margin-top 0
    padding .2rem .3rem
    .foot
        margin 0 -.3rem 0 0
        padding .2rem .3rem 0 0
        bor(relative,0,auto,$bor)
        line-height .4rem
        .right
            color $hui
    .item
        padding .2rem 0
        font-size .22rem
        &:not(:first-child)
            bor(relative,0,auto,$bor)
        h3
            color $he
            height .45rem
.list
    .head
        padding 0 .4rem
        height .6rem
        line-height .6rem
        color $he
        bor(relative,auto,.01rem,$bor)
        font-size .22rem
        &:before
            content ''
            position absolute
            width .04rem
            height .24rem
            background $he
            left .26rem
            top .15rem

    .foot
        margin-left .3rem
        padding .2rem .3rem .2rem 0
        bor(relative,0,auto,$bor)
        line-height .4rem
        .right
            color $hui

    .main
        ul()
        padding .2rem
        li
            padding .05rem .5rem
            position relative
            i
            .val
                position absolute
                top .1rem
            i
                width .24rem
                height .24rem
                color #fff
                border 1px solid $bor
                left .1rem
                text-align center
            .val
                right .1rem
            &.active i
                color $jv
                border-color $jv

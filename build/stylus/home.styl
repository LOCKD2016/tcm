.p_home
    .banner
        height 3rem
        position relative
        z-index 8
        .swiper-pagination
            text-align right
            padding 0 .1rem
        .swiper-pagination-bullet
            border 1px solid #fff
            background transparent
            border-radius 0
            opacity .7
        .swiper-pagination-bullet-active
            opacity 1
            background #fff
        .swiper-slide
            height 3rem
            color #fff
            text-align center
            text-shadow 0 0 .1rem $hui
            font-size .5rem
            position relative
            z-index 5
            overflow hidden
            img()
        h4
            position absolute
            left .2rem
            bottom .4rem
            margin 0
            font-size .3rem
    #wrap
        padding-bottom $foot_h

.search_box
    padding .1rem
    position relative
    i
        position absolute
        right .1rem
        font-size .24rem
        padding .12rem
    input
        height .45rem
        width 100%
        text-align center
        border-radius 2px




.home_nav
    clear()
    background #fff
    margin .2rem 0
    text-align center
    ft()
    font-size .24rem
    .box
        width 33.33%
        height 2.5rem
        float left
        border-right .5px solid $bor
        &:nth-child(3n)
            border-right 0
        &:nth-child(4)
        &:nth-child(5)
        &:nth-child(6)
            border-top .5px solid $bor
        .ico
            img()
            width 1.3rem
            height 1.3rem
            border-radius 50%
            margin .3rem auto

.p_sign #wrap
    > div
        position fixed
        width 100%
        height 100%
        top 0

.sign_in
    background $he url(../img/sign_bg.jpg) no-repeat center
    background-size cover
    padding 10% .5rem
    color #ffft
    .logo
        width 1rem
        height 1rem
        margin 20% auto
        img()
        background-image url(../img/logo.png)

    ul
        ul()
        margin-bottom 1rem
        li
            position relative
            padding .2rem .5rem
            border-bottom .5px solid $tmb
            i
                position absolute
                font-size .4rem
                color $he
                left 0
                top .25rem
            input
                height .5rem
                border 0
                background transparent
                color #fff
                font-size .24rem
            .btn
                position absolute
                right 0

.sign_up
    padding $head_h 0
    ul
        margin-bottom 0

.p_order #wrap
    padding-top 1px
    padding-bottom $foot_h


.ios-select-body-class
    overflow hidden
    position fixed
    top 0
    left 0
    right 0
    bottom 0
    .ios-select-widget-box.olay > div
        bottom 0
.ios-select-loading-box
    width 100%
    height 100%
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    background-color rgba(0,0,0,.05)
    display none
    .ios-select-loading
        font-size: 0;
        position: absolute;
        z-index 10
        border 2px solid rgba(40, 210, 180, 0.3)
        border-left-color: $qn
        -webkit-transform: translateZ(0);
        transform: translateZ(0);
        -webkit-animation: load8 0.5s infinite linear;
        animation: load8 0.5s infinite linear;
        box-shadow 0 0 2px rgba(255,255,255,.8)
        top: 50%;
        left: 50%;
        margin: -20px 0 0 -20px;
.ios-select-loading,
.ios-select-loading:after
    border-radius: 50%;
    width: 40px;
    height: 40px;

@-webkit-keyframes load8
    0%
        -webkit-transform: rotate(0deg);
        transform: rotate(0deg);
    100%
        -webkit-transform: rotate(360deg);
        transform: rotate(360deg);

@keyframes load8
    0%
        -webkit-transform: rotate(0deg);
        transform: rotate(0deg);
    100%
        -webkit-transform: rotate(360deg);
        transform: rotate(360deg);


/* layer begin */
.ios-select-widget-box
    padding-top 44px
    &.olay
        position absolute
        z-index 500
        top 0
        left 0
        width 100%
        height 100%
        opacity 1
        background rgba(0, 0, 0, 0.4)
        & > div
            position fixed
            z-index 1000
            left 0
            bottom -200%
            width 100%
            height 100%
            background #fff
            transition bottom .5s .3s
    header.iosselect-header
        position relative
        padding-top 0
        height 44px
        line-height 44px
        width 100%
        z-index 9999
        text-align center
        &:before
            display none
        a
            font-size 14px
            position absolute
            text-decoration none
            border 1px solid $hon
            padding 0 15px
            height 28px !important
            line-height 28px !important
            display inline-block
            margin 8px
            border-radius 4px
            top 0
            &.close
                left 0
                color $hon
            &.sure
                color #fff
                background $hon
                right 0
    .iosselect-box
        overflow hidden
        & > div
            display block
            float left
    ul
        background-color #fff
        li
            font-size 13px
            height 35px
            line-height 35px
            background-color #fff
            white-space nowrap
            overflow hidden
            text-overflow ellipsis
            text-align center
            color #111
            opacity .3
            &.at
                font-size 16px
                opacity 1
                color $hon
            &.side1
                font-size 15px
                opacity .7
            &.side2
                font-size 14px
                opacity .5
    &.one-level-box
        .one-level-contain
            width 100%
    &.three-level-box
        .three-level-contain
            width 40%
        .four-level-contain
            .ios-select-widget-box
                &.three-level-box
                    .five-level-contain
                        width 0%
    &.four-level-box
        .five-level-contain
            width 0
    .cover-area1
        width 100%
        border none
        border-top 1px solid #d9d9d9
        position absolute
        top 149px
        margin 0
        height 0
    .cover-area2
        width 100%
        border none
        border-top 1px solid #d9d9d9
        position absolute
        top 183px
        margin 0
        height 0
    #iosSelectTitle
        margin 0
        padding 0
        display inline-block
        font-size 16px
        font-weight normal
        color #333
.ios-select-widget-box
    .one-level-contain,
    .two-level-contain,
    .three-level-contain,
    .four-level-contain,
    .five-level-contain
        height 100%
        overflow hidden
.ios-select-widget-box.one-level-box .two-level-contain,
.ios-select-widget-box.one-level-box .three-level-contain,
.ios-select-widget-box.one-level-box .four-level-contain,
.ios-select-widget-box.one-level-box .five-level-contain
    width 0
.ios-select-widget-box.two-level-box .one-level-contain,
.ios-select-widget-box.two-level-box .two-level-contain
    width 50%
.ios-select-widget-box.two-level-box .three-level-contain,
.ios-select-widget-box.two-level-box .four-level-contain,
.ios-select-widget-box.two-level-box .five-level-contain
    width 0
.ios-select-widget-box.three-level-box .one-level-contain,
.ios-select-widget-box.three-level-box .two-level-contain
    width 30%
.ios-select-widget-box.four-level-box .one-level-contain,
.ios-select-widget-box.four-level-box .two-level-contain,
.ios-select-widget-box.four-level-box .three-level-contain,
.ios-select-widget-box.four-level-box .four-level-contain
    width 25%
.ios-select-widget-box.five-level-box .one-level-contain,
.ios-select-widget-box.five-level-box .two-level-contain,
.ios-select-widget-box.five-level-box .three-level-contain,
.ios-select-widget-box.five-level-box .four-level-contain,
.ios-select-widget-box.five-level-box .five-level-contain

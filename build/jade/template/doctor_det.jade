extends ../layout/layout
block head
    -var bodyclass='p_doctor_det'
block banner
    header.tm
        .left(onclick="back()")
            i.icon-arrow-left
    .btn.btn-fix
        .left
            i.icon-h-nav7
            span 在线咨询
        .right 门诊预约

block body
    .doc_banner
        .avatar
        h1
            b {{doctor.name}}
            sub {{doctor.title}}
        p
            span 推荐指数
            span.stars(v-bind:show="doctor.stars")
                i.icon-nav1
                i.icon-nav1
                i.icon-nav1
                i.icon-nav1
                i.icon-nav1

    .doc_main#dInfo
        .conts
            h3 所属医院
            p {{doctor.hospital}}
            h3 擅长
            p {{doctor.adept}}
            h3 个人介绍
            p {{doctor.abstract}}
        .btn_toggle(onclick="$('#dInfo').toggleClass('open')")
            span 更多
            i.icon-triangle-down


    .doc_main#dComment
        .hr
            h3 评论（{{comment_num}}）
        .comments(v-for="(it,ind) in comment")
            .avatar(v-bind:style="bg(it.avatar)")
            h2 {{it.name}}
            h6 {{it.time}}
            p {{it.content}}
            .right
                b {{it.tag}}
                span 热度
                span.stars(v-bind:show="it.star")
                    i.icon-nav1
                    i.icon-nav1
                    i.icon-nav1
                    i.icon-nav1
                    i.icon-nav1

        .btn_toggle(onclick="getComment()")
            span 更多评价
            i.icon-triangle-down




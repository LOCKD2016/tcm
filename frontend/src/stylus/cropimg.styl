@font-face
    font-family 'cropimg' 
    src  url('/static/fonts/cropimg.ttf')
    font-weight normal 
    font-style normal
$w=1.2rem
#cropbox
    position fixed
    display none
    height 100%
    width 100%
    top 0
    z-index 99
    padding-top .7rem
.cropbox
    width 100%
    height 100%
    position relative
    font-size .6rem
    background #fff url("data:image/png;base64,")
    background-size 10px 10px
    .cropControls
    .addimg
        position absolute
        z-index 999
    .addimg
        top 5px
        left 5px
        width $w*1.2
        height $w*.5
        font-size .3rem
        i
            border-radius 3px
            width 100%
            height 100%
            &:before
                line-height $w * .45
                content '选择照片'
        input
            position absolute
            top 0
            left 0
            width 100%
            height 100%
            opacity .0001
    .crop_box
        -webkit-transform scale(.5,.5) translate(-50%,-50%)
        -moz-transform scale(.5,.5) translate(-50%,-50%)
        -ms-transform scale(.5,.5) translate(-50%,-50%)
        -o-transform scale(.5,.5) translate(-50%,-50%)
        transform scale(.5,.5) translate(-50%,-50%)
    .cropControls
        top 10px
        height $w
        right 10px
    i
        font-family 'cropimg' !important 
        speak none 
        font-style normal 
        font-weight normal 
        font-variant normal 
        text-transform none 
        display inline-block
        cursor pointer
        text-align center
        width $w
        height $w
        color #fff
        background-color rgba(0,0,0,0.35)
        border-radius 5px
        border 1px solid #fff
        &:hover
            background-color rgba(0,0,0,0.7)
        &:before
            display inline-block
            line-height $w


    .cropControlZoomMuchIn
    .cropControlZoomMuchOut
    .cropControlRotateRight
    .cropControlReset
        display none


    .cropControlZoomIn
    .cropControlZoomMuchIn
    .icon-plus
        &:before
            content "\e900"
    .cropControlZoomOut
    .cropControlZoomMuchOut
    .icon-minus
        &:before
            content "\e901"
    .icon-picture:before
        content "\e902"
    .icon-cancel:before
        content "\e903"
    .cropControlCrop
        width $w * 1.5
        line-height $w*.9
    .icon-crop
        &:before
            content "\e904"
    .cropControlRemoveCroppedImage
    .icon-floppy
        &:before
            content "\e905"
    .icon-download:before
        content "\e960"
    .cropControlUpload
    .icon-upload
        &:before
            content "\e961"
    .cropControlRotateLeft
    .icon-undo
        &:before
            content "\e965"
    .cropControlRotateRight
    .icon-redo
        &:before
            content "\e966"
    .icon-undo2:before
        content "\e967" 
    .icon-redo2:before
        content "\e968" 
    .icon-spinner:before
        content "\e97a" 

.crop_box
    img
        width 50%
        height 50%
        margin 20% auto
